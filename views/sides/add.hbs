<script>
    function sendInfo()
    {
        const name = document.getElementById("name");

        if (name.value.length == 0) {
            alert("Vui Lòng Không Bỏ Trống Tên Sản Phẩm")
            return false
        }

        const description = document.getElementById("description");

        if (description.value.length == 0) {
            alert("Vui Lòng Không Bỏ Trống Mô Tả Sản Phẩm")
            return false
        }

        const price = document.getElementById("price");

        if (price.value.length == 0) {
            alert("Vui Lòng Không Bỏ Trống Giá Sản Phẩm")
            return false
        }

        const form = document.createElement("form");
        form.method = "POST";
        form.action = "/manage-sides/add";

        const inputName = document.createElement("input");
        inputName.name = "name";
        inputName.value = name.value;
        form.appendChild(inputName);

        const inputDescription = document.createElement("input");
        inputDescription.name = "description";
        inputDescription.value = description.value;
        form.appendChild(inputDescription);

        const inputPrice = document.createElement("input");
        inputPrice.name = "price";
        inputPrice.value = price.value;
        form.appendChild(inputPrice);

        document.body.appendChild(form);

        form.submit();
    }


</script>
