<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <div class="page-title-box">
                <div class="row align-items-center">
                    <div class="col-sm-6">
                        <h4 class="page-title">Add product</h4>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Stexo</a></li>
                            <li class="breadcrumb-item"><a href="javascript:void(0);">Manage products</a></li>
                            <li class="breadcrumb-item active">Add products</li>
                        </ol>
                    </div>
                </div> <!-- end row -->
            </div>
            <!-- end page-title -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Sửa thông thông tin của sản phẩm cần cập nhật</h4>

                            <!-- Form -->
                            <input type="hidden" value="{{_id}}" id="id" name="id"/>
                            <form method="POST" action="/manage-sides/update/{{_id}}" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Tên</label>
                                    <input type="text" class="form-control" required placeholder="Tên sản phẩm" name="name" id="name" value="{{name}}"/>
                                </div>

                                <div class="form-group col-sm-2 img-picker-container"> 
                                    <label>Ảnh đại diện</label>
                                    <div class="img-picker" id="avatarPicker" data-url="{{avatar}}"></div>
                                </div> 

                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <div>
                                        <textarea required class="form-control" rows="5" required placeholder="Mô tả sản phẩm" name="description" id="description">{{description}}</textarea>
                                    </div>
                                </div>

                                <div class="form-group img-picker-container"> 
                                    <label>Ảnh mô tả</label>
                                    {{#if (hasImage)}}
                                        <div class="row">
                                        {{#each images}}
                                            <div class="img-picker col-sm-2" id="descriptionPicker{{index @index}}" data-url="{{src}}"></div>
                                        {{/each}}
                                        </div>
                                    {{else}}
                                        <div class="row">
                                            <div class="img-picker col-sm-2" id="descriptionPicker1" data-url=""></div>
                                            <div class="img-picker col-sm-2" id="descriptionPicker2" data-url=""></div>
                                            <div class="img-picker col-sm-2" id="descriptionPicker3" data-url=""></div>
                                            <div class="img-picker col-sm-2" id="descriptionPicker4" data-url=""></div>
                                        </div>   
                                    {{/if}}
                                </div>

                                <div class="form-group">
                                    <label>Giá tiền</label>
                                    <div class="input-group">
                                        <input data-parsley-type="number" type="text"
                                                class="form-control" required
                                                placeholder="Giá tiền sản phẩm"
                                                name="price"
                                                id="price"
                                                value="{{price}}"/>

                                        <div class="input-group-append">
                                            <span class="input-group-text">VNĐ</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div>
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">
                                            Cập nhật
                                        </button>

                                        <a href="/manage-sides">
                                            <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                                Bỏ qua
                                                
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->      
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
    <footer class="footer">
        © 2019 Stexo <span class="d-none d-sm-inline-block"> - Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign</span>.
    </footer>
</div>